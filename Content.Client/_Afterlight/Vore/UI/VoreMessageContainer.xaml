<controls:VoreMessageContainer
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._Afterlight.Vore.UI"
    xmlns:cb="clr-namespace:Content.Client.UserInterface.Controls"
    xmlns:ui="clr-namespace:Content.Client._Afterlight.UserInterface">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Horizontal">
            <RichTextLabel Name="Label" Access="Public" />
            <Control HorizontalExpand="True" />
            <cb:ConfirmButton Name="ResetButton" Access="Public"
                                     StyleClasses="OpenBoth" />
        </BoxContainer>
        <ui:BlueHorizontalSeparator />
        <BoxContainer Orientation="Vertical" Name="MessagesContainer" Access="Public" />
    </BoxContainer>
</controls:VoreMessageContainer>
